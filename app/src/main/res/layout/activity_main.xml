<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rewarded Video Ad"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/load"
        android:layout_below="@id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Load Ad"
        android:onClick="load"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/show"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_below="@id/load"
        android:onClick="show"
        android:enabled="false"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interstitial Ad"
        android:id="@+id/textView1"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/loadInterstitial"
        android:layout_below="@id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Load Ad"
        android:onClick="loadInterstitial"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/showInterstitial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_below="@id/loadInterstitial"
        android:onClick="showInterstitial"
        android:enabled="false"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
